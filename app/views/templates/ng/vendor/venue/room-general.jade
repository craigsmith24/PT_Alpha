h4 ROOM 
    small @ Sophia Room
    .row
        .columns.large-4
            label Room Name
                input(type='search', placeholder='eg Sophia ROom')

            label Room Type
            select
                option(value="public") public
                option(value="private", selected) private
                option(value="semi private") semi private
            
            .row.collapse
                .columns.large-4
                    label
                        input(type="text")
                .columns.large-8
                    select
                        option(value="sf", selected) square feet
                        option(value="sq") square meter
            
            .row.collapse
                .columns.large-5
                    .switch.tiny
                        input(type='checkbox', id='status')
                        label(for='status')
                .columns.large-5.large-offset-1
                    h6 active
            hr
            // rules
            
            label House Rules
            select
                option(value="superstrict") super strict
                option(value="strict") strict
                option(value="medium") medium
                option(value="low") low
            
            label Cancellation Policy
            select
                option(value="superstrict") super strict
                option(value="strict") strict
                option(value="medium") medium
                option(value="low") low
                
            label Lead Time
            select
                option(value="14") 14 days
                option(value="7") 7 days
                option(value="3") 3 days
                    
        .columns.large-4
            .row.collapse
                .columns.large-6
                    label Day Rate
                        input(type="text", placeholder='eg 9.00%')                
                .columns.large-6
                    label Night Rate
                        input(type="text", placeholder='eg 22.00%')

            label Revenue Management
            .row
                .columns.large-4
                    .switch.round.tiny
                        input(type="checkbox",id='rev', checked)
                        label(for="rev")
                .columns.large-8
                    h6 On                    
            hr
            // fees and default rates
            label Currency
            select
                option(value="USD") US Dollars
            
            label Rental Fee
                input(type="text", placeholder='$0')
                
            label Cleaning Fee
                input(type="text", placeholder='$0')
            
            .row.collapse
                label Overage
                .columns.large-4
                    input(type="text", placeholder='$0')
                .columns.large-8
                    select
                        option(value="30") every 30 minutes
        .columns.large-4
          