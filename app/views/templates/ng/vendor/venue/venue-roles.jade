.row
    .clean-button-tiny.top-cta.right
        | &nbsp; delete Craig Smith &nbsp;
        i.fi-trash
    .clean-button-tiny.top-cta.right 
        | &nbsp; save &nbsp;
        i.fi-save
    .clean-button-tiny.top-cta.right cancel
    h4 ROLE 
        small Craig Smith
    hr
    .columns.large-4
            label Name
                input(type='search', placeholder='eg My Hotel')

            label Role
                select
                    option(value="event manager") event manager
                    option(value="owner") owner
                    option(value="event coordinator") event coordinator
                    option(value="general manager") general manager
                    option(value="partner") partner

            label Email
                input(type="text", placeholder='eg joe@name.com')

            label Phone Number
                input(type="text", placeholder='555 555-5555')
                
            .row.collapse
                .columns.large-3
                    .switch.round.tiny
                        input(type="checkbox",id='isActive', checked)
                        label(for="isActive")
                .columns.large-9
                    h6.subheader Currently Active
            
        .columns.large-8
            h6 NOTIFICATION
                table.notification(width='100%')
                    thead
                        tr
                            th(id='event') event
                            th(width='110')
                            th(width='40', id='email') email
                            th(width='40', id='phone') phone
                    tbody
                        tr
                            th(id='event1', header='event') new prospect
