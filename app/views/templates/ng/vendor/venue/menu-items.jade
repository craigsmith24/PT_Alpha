.row
    .clean-button-tiny.top-cta.right
        &nbsp; delete menu item &nbsp;
        i.fi-trash
    .clean-button-tiny.top-cta.right 
        &nbsp; save &nbsp;
        i.fi-save
    .clean-button-tiny.top-cta.right cancel
    h4 MENU ITEM 
        small | California Halibut Sashimi
    hr
    .columns.large-4
        label Menu Item Name
            input(type='text', placeholder='eg My Hotel')

        label Description
            span.right 120/200
        textarea(name="", cols="30", rows="4")

        .row.collapse
            .columns.large-3
                .switch.round.tiny
                    input(type="checkbox",id='isActive', checked)
                    label(for="isActive")
            .columns.large-9
                h6.subheader Currently Active
        

    .columns.large-4
        label How is this menu item served? (subcategory)
            select
                option(value="plated") plated
                option(value="family style") family style
                option(value="tray passed") tray passed
                option(value="station") station
        
        .row.collapse
            label Price
            .columns.large-5
                .padding1pxsides
                    .row.collapse
                        .columns.large-4
                            span.postfix $
                        .columns.large-8
                            input(type="text", placeholder='eg 20') 

            .columns.large-7
                .padding1pxsides
                    select
                        option(value="A") per head
                        option(value="B") per head per hour

        
        .row.collapse
            .columns.large-3
                .switch.round.tiny
                    input(type="checkbox",id='isRequired', checked)
                    label(for="isRequired")
            .columns.large-6
                 h6.subheader Guest Count Required
            .columns.large-3
                input(type='text',placeholder='eg 20')


    .columns.large-4
        h6.dietary Ingredients
        .ingredient-tokens.clearfix
            .token.left tomatoes &nbsp;
                i.fi-x
            .token.left wine sauce &nbsp;
                i.fi-x
            .token.left olive oil &nbsp;
                i.fi-x
            .token.left peanuts &nbsp;
                i.fi-x
        .clean-button-tiny edit Ingredients
        
        h6.dietary Dietary Preferences
        .room-tokens.clearfix
            .token.left vegan &nbsp;
                i.fi-x
            .token.left vegetarian &nbsp;
                i.fi-x
        .clean-button-tiny edit Dietary Preferences
    hr
    
    .clean-button-tiny.top-cta.right
        &nbsp; upload image &nbsp;
        i.fi-upload
    .clean-button-tiny.top-cta.right
        &nbsp; hide dropzone &nbsp;
    h5.subheader IMAGES
    ul.inline-list
        li 
            .img-place-holder(style='width:160px;height:90px;background-color:#444')
        li
