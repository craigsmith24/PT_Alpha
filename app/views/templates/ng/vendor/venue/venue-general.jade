.row
    .clean-button-tiny.top-cta.right
        &nbsp; delete venue &nbsp;
        i.fi-trash
    .clean-button-tiny.top-cta.right 
        &nbsp; save &nbsp;
        i.fi-save
    .clean-button-tiny.top-cta.right cancel
    h4 VENUE 
        small | General Setup Information
    hr
    .columns.large-4
        label Venue Name
            input(type='search', placeholder='eg My Hotel')

        label Address
            input(type="text", placeholder='')


        label Phone Number
            input(type="text", placeholder='(555) 555-5555')

        label Fax Number
            input(type="text", placeholder='(555) 555-5555')

        label url
            input(type="text", placeholder='eg www.name.com')

        label Email
            input(type="text", placeholder='eg joe@name.com')

    .columns.large-4
        .row.collapse
            .columns.large-3
                .switch.round.tiny
                    input(type="checkbox",id='includeTaxGratuity', checked)
                    label(for="includeTaxGratuity")
            .columns.large-9
                h6.subheader Include Tax and Gratuity in Menu Price
        
        hr

        .row.collapse
            .columns.large-6
                .padding1pxsides
                    label Tax Rate
                    .row.collapse
                        .columns.large-8
                            input(type="text", placeholder='eg 9.00%') 
                        .columns.large-4
                            span.postfix %
            .columns.large-6
                .padding1pxsides
                    label Gratuity
                    .row.collapse
                        .columns.large-8
                            input(type="text", placeholder='eg 22.0') 
                        .columns.large-4
                            span.postfix %
                    
        .row.collapse
            label Business Hours
            .columns.large-6
                .padding1pxsides
                    select
                        option(value="5:00a") 5:00a
                        option(value="6:00a") 6:00a
                        option(value="7:00a") 7:00a
                        option(value="8:00a") 8:00a
                        option(value="9:00a") 9:00a
                        option(value="10:00a") 10:00a
            .columns.large-6
                .padding1pxsides
                    select
                        option(value="7:00p") 7:00p
                        option(value="8:00p") 8:00p
                        option(value="9:00p") 9:00p
                        option(value="10:00p") 10:00p
                        option(value="11:00p") 11:00p
    .columns.large-4
        label Time Zone
            select
                option(value="pacific") Pacific Standard Time
                option(value="easter") Eastern Standard Time
                option(value="central") Central Standard Time

        label Currency
            select
                option(value="USD") US Dollars

        label Cuisine Type
            select
                option(value="american") American
                option(value="japanese") Japanese
                option(value="korean") Korean

