.sticky  
  nav.top-bar(data-topbar='', role='navigation', data-options="is_hover: true")
    ul.title-area
        li.name
          h1
            a(href='#', target='_self')
                img(src='/assets/images/logo.png', width='100', height='24')
                span Calendar
        // Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
        li.toggle-topbar.menu-icon
          a(href='#', target='_self')
            span Menu
         
      section.top-bar-section
        // Right Nav Section
        ul.right
          li
            a(href='#', target='_self') + Event
          li
            a(href='#', target='_self') + Prospect
                 
          li.has-dropdown
            a(href='#', target='_self')
              img(src='/assets/images/faces/craig.jpg', width='30', height='30')
                    
            ul.dropdown
              li
                a(href='#', target='_self') settings
                        
              li.active
                a(href='#', target='_self') logout
          //off canvas toggle class right-off-canvas-toggle 
          //must have this toggle class for off canvas to work
          // rest of the off canvas code is at layout-off-canvas.jade file
          li
            a.right-off-canvas-toggle(href='#', target='_self')
              img(src='/assets/images/slide-left.png', width='16', height='16')
        // Left Nav Section
        ul.left
          li
            a(href='#')
                img(src='/assets/images/calendar.png', width='16', height='16')
          li
            a(href='#')
                img(src='/assets/images/users.png', width='16', height='16')
          li
            a(href='#')
                img(src='/assets/images/mail.png', width='16', height='16')
          li
            a(href='#')
                img(src='/assets/images/door.png', width='16', height='16')
  hr(style="margin:0")