div(ng-controller="VenueController")
    .panel.clearfix
        label search
            input(type='search', placeholder='search menu items', ng-model='query')
        .clean-button.right add
        .clean-button.right cancel
        
    hr
    ul.menu-items
        li(ng-repeat='item in data.menuitems | filter: query')
            {{item.name}}