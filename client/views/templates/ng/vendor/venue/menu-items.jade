h4 MENU ITEMS  
    small name of menut item
    .row
        .columns.large-4
            label Menu Item Name
                input(type='text', placeholder='eg My Hotel')

            label Description
                span.right 120/200
            textarea(name="", cols="30", rows="4")
            
            label Item is currently Active
            .switch.round.tiny
                input(type="checkbox",id='role', checked)
                label(for="role")

            hr
            h6.dietary Ingredients
            .ingredient-tokens
                span.token Ingredients
                    span.delete-token
                        img(src="assets/images/image.png", alt="")
                span.token public
                    span.delete-token
                        img(src="assets/images/image.png", alt="")
                span.token semi-private
                    span.delete-token
                        img(src="assets/images/image.png", alt="")

            br
            h6.dietary Dietary Preferences
            .room-tokens
                span.token private
                    span.delete-token
                        img(src="assets/images/image.png", alt="")
                span.token public
                    span.delete-token
                        img(src="assets/images/image.png", alt="")
                span.token semi-private
                    span.delete-token
                        img(src="assets/images/image.png", alt="")

        .columns.large-4
            label How is this menu item served? (subcategory)
                select
                    option(value="plated") plated
                    option(value="family style") family style
                    option(value="tray passed") tray passed
                    option(value="station") station
            label Class (subcategory)
                select
                    option(value="A") A
                    option(value="B") B
                    option(value="C") C
                    option(value="D") D
            label Price
                input(type='text')
            label Pricing Method (subcategory)
                select
                    option(value="A") per head
                    option(value="B") per head per hour
            label Minimum Guests
                input(type='text')
            

        .columns.large-4
            