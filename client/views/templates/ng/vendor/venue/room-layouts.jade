h4 LAYOUT  
    small Royal Theater Layout @Sophia Room
    .row
        .columns.large-4
            label Layout Name
                input(type='search', placeholder='eg conference layout')
                
            label Product Type
            select
                option(value="banquet") Banquet
                option(value="reception") Reception
 
            .row.collapse
                label Capacity
                .columns.large-6
                    label Minimum 
                        input(type="text")
                .columns.large-6
                    label Maximum
                        input(type="text")
            
            .row.collapse
                .columns.large-5
                    .switch.tiny
                        input(type='checkbox', id='status')
                        label(for='status')
                .columns.large-5.large-offset-1
                    h6 active
            hr
            // rules
            
            label Description
            textarea(name="", cols="30", rows="3")
                    
        .columns.large-8
            
            
          